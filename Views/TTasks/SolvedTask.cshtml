@model TSolvedTasksViewModel
<!DOCTYPE html>
<html style="font-size: 16px;">
 <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    
    <meta name="page_type" content="np-template-header-footer-from-plugin">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="/css/student_result_one_task.css" media="screen">
    <script class="u-script" type="text/javascript" src="/js/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="/js/nicepage.js" defer=""></script>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact+Gothic:400">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact+Gothic:400">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    
    <meta name="theme-color" content="#9ea400">
    <meta property="og:type" content="website">
  </head>


  <body>
      @Html.Partial("HeadTeacher")
      <article>
          @if (Model != null)
        {
            @if (Model.answer != null)
            {
                <section>
                    @if(Model.isTrue)
                    {
                        <h2 class="text-title">Задание №@Model.answer.Id – решено верно</h2>
                    }
                    else
                    {
                        <h2 class="text-title">Задание №@Model.answer.Id – решено неверно</h2>
                    }
                    <h4 class="text">Тема: @Model.answer.Task.ThemeTitle</h4>
                    <h4>Студент: @Model.answer.StudentName </h4>
                    <div class="u-border-2 u-border-palette-2-base u-line u-line-horizontal u-line-1" style="padding-bottom: 0"></div>
                    <p>Ответ: @Model.answer.Task.Answer</p>
                    <p>Ответ студента: @Model.answer.Answer</p>
                    <p>Время: @Model.answer.Time</p>
                    <div class="u-border-2 u-border-palette-2-base u-line u-line-horizontal u-line-1"></div>
                    <p class="task-text">@Model.answer.Task.Text</p>
                @if (@Model.content)
                {
                    @if (Model.answer.Task.pattern._code)
                    {
                        <div class="grid-code1" style="margin: 0 0 0 0; padding: 0 0 0 0;">
                            <h5 style="text-align:center;">Бейсик</h5>
                            <h5 style="text-align:center;">Python</h5>
                            <h5 style="text-align:center;">Паскаль</h5>
                            <textarea readonly style="width: 100%; height:auto;">@Model.answer.Task.pattern.codeText[0]</textarea>

                            <textarea readonly style="width: 100%; height:auto;">@Model.answer.Task.pattern.codeText[1]</textarea>

                            <textarea readonly style="width: 100%; height:auto;">@Model.answer.Task.pattern.codeText[2]</textarea>
                        </div>
                        <div class="grid-code2" style="margin: 0 0 0 0; padding: 0 0 0 0;">
                            <h5 style="text-align:center;">Алгоритмический язык</h5>
                            <h5 style="text-align:center;">Си++</h5>
                            <textarea readonly style="width: 100%; height:auto;">@Model.answer.Task.pattern.codeText[3]</textarea>

                            <textarea readonly style="width: 100%; height:auto;">@Model.answer.Task.pattern.codeText[4]</textarea>
                        </div>

                    }
                    @if (Model.answer.Task.pattern.files != null)
                    {
                        @foreach (var file in Model.answer.Task.pattern.files)
                        {
                            @if (file.Type == "img")
                            {
                                <p style="text-align:center;">
                                    <img src="@file.Path" style="height:300px;">
                                    </p>
                            }
                            if (file.Type == "file")
                            {
                                <p class="text-to-center" ><a target="_blank" href="@file.Path" download="">Скачать файл</a></p>
                            }
                        }
                    }
                }
                </section>   
                <a href="~/TTasks/TaskList" class="u-border-2  u-border-hover-palette-2-base u-border-palette-1-base u-btn u-button-style   u-text-hover-palette-2-base btn-to-center">К списку заданий</a>
            }

        }  
    </article>

    <footer id="pageFooter" class="footer-all u-clearfix">
    <p class="footer-text u-text-variant"> © 2022 Examcy | Образовательная платформа</p>
  </footer>
  </body>
</html>
@model StAchievsViewModel
<!DOCTYPE html>
<html style="font-size: 16px;">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    
    <meta name="page_type" content="np-template-header-footer-from-plugin">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="/css/student_achiews.css" media="screen">
    <script class="u-script" type="text/javascript" src="/js/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="/js/nicepage.js" defer=""></script>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact+Gothic:400">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact+Gothic:400">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    
    <meta name="theme-color" content="#9ea400">
    <meta property="og:type" content="website">
  </head>


<body>
@Html.Partial("HeadStudent")
  <article id="mainArticle">

<h2 class="text-title">Достижения</h2>
<section class = "courses">
    @if (Model != null)
    {
        @if(Model.achievements != null)
        {
            @if(Model.achievements.Count()> 0)
            {
                 @foreach(var achiev in Model.achievements)
            {
                 <div class="course">
                    
                    <h3 class="text-to-center">@achiev.Title</h3>
                    <p class="text-to-center">@achiev.Description</p>
                    <p style="text-align: center;"><img src="@achiev.Img" width="300px"></p>
                  </div>
            }       
            }
        }
    }

    @if (Model != null)
    {
        @if(Model.all != null)
        {
            @if(Model.all.Count()> 0)
            {
                 @foreach(var achiev in Model.all)
            {
                 <div class="course">
                    <h3 class="text-to-center">@achiev.Title</h3>
                    <p class="text-to-center">@achiev.Description</p>

                    <p style="text-align: center;"><img class="not-to-get" src="@achiev.Img" width="300px"></p>
                  </div>
            }       
            }

        }

    }
</section>
</article>


  <footer id="pageFooter" class="footer-all u-clearfix">
    <p class="footer-text u-text-variant"> © 2022 Examcy | Образовательная платформа</p>
  </footer>
</body>
</html>
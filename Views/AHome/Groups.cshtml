@model Examcy.ViewModels.Admin.GroupViewModel

<!DOCTYPE html>
<html style="font-size: 16px;">
 <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    
    <meta name="page_type" content="np-template-header-footer-from-plugin">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="/css/admin.css" media="screen">
    <script class="u-script" type="text/javascript" src="/js/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="/js/nicepage.js" defer=""></script>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact+Gothic:400">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact+Gothic:400">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    
    <meta name="theme-color" content="#9ea400">
    <meta property="og:type" content="website">
  </head>

<body>
@Html.Partial("HeadAdmin")
<div style="padding: 10px;"></div>
<div class="task-list"> 
<h1  style="text-align:center">Группы</h1>
    <table style="width: 100%">
         <colgroup>
            <col width="6%">
            <col width="35">
            <col width="35%">
            <col width="12%">
            <col width="12%">
        </colgroup>
        <tbody class="u-table-alt-palette-2-light-3">
        <tr>
            <td class="u-table-cell">Id</td>
            <td class="u-table-cell">Название</td>
            <td class="u-table-cell">Курс</td>
            <td class="u-table-cell"></td>
            <td class="u-table-cell"></td>
        </tr>
        @foreach (var group in Model.groups)
        {
            <tr>
                <td class="u-table-cell">@group.GroupID</td>
                <td class="u-table-cell">@group.Title</td>
                <td class="u-table-cell">@group.CourseName</td>
                <td class="u-table-cell"><a href="~/AHome/DeleteGroup/@group.GroupID">Удалить</a></td>
                <td class="u-table-cell"><a href="~/AHome/ChangeGroup/@group.GroupID">Изменить</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
<footer id="pageFooter" class="footer-all u-clearfix">
        <p class="footer-text u-text-variant"> © 2022 Examcy | Образовательная платформа</p>
    </footer>
</body>
</html>
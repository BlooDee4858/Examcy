@model StAllCoursesViewModel
<!DOCTYPE html>
<html style="font-size: 16px;">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    
    <meta name="page_type" content="np-template-header-footer-from-plugin">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="/css/student_allcourse.css" media="screen">
    <script class="u-script" type="text/javascript" src="/js/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="/js/nicepage.js" defer=""></script>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact+Gothic:400">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Didact+Gothic:400">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    
    <meta name="theme-color" content="#9ea400">
    <meta property="og:type" content="website">
  </head>

  <body class="u-body u-xl-mode">
@Html.Partial("HeadStudent")
    <article>
      <section>
        <h2 class="text-title">Доступные курсы</h2>
        @if (Model != null)
            {
                @if (Model.courses != null)
                {
                    @if (Model.courses.Count() > 0)
                    {
                        <div class="task-list">
                        <table style="width: 100%">
                        <colgroup>
                          <col width="40%">
                          <col width="45%">
                          <col width="15%">
                        </colgroup>
                        <tbody class="u-table-alt-palette-2-light-3">
                          <tr style="border-bottom: 1px solid #534a6a;">
                            <td class="u-table-cell">Курс</td>
                            <td class="u-table-cell">Преподаватель</td>
                            <td class="u-table-cell"></td>
                          </tr>
                          @foreach(var c in Model.courses)
                          {
                          <tr>
                            <td class="u-table-cell">@c.Title</td>
                            <td class="u-table-cell">@c.Teacher.LastName @c.Teacher.FirstName</td>
                            @if (c.IsOpen)
                            {
                                <td class="u-table-cell"> 
                                    <a href="~/StAllCourses/SignUp/@c.Id"> Записаться</a></td>
                            }else
                            {
                                <td class="u-table-cell">Курс закрыт для записи</td>
                            }                  
                          </tr>
                          }
                        </tbody>
                      </table>
                    </div>   

                    }
                    else
                    {
                        <p class="text-to-center"> Вы уже записались на все доступные курсы.</p>
                    }
                }
                else
                {
                    <p class="text-to-center"> Вы уже записались на все доступные курсы.</p>
                }
            }
            else
            {
                <p class="text-to-center"> Вы уже записались на все доступные курсы.</p>
            }
      </section>
    </article>

    <footer id="pageFooter" class="footer-all u-clearfix">
    <p class="footer-text u-text-variant"> © 2022 Examcy | Образовательная платформа</p>
  </footer>
  </body>
</html>